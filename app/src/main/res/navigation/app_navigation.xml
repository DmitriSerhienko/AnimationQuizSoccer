<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/welcomeScreenFrag2">
    <fragment
        android:id="@+id/welcomeScreenFrag2"
        android:name="com.example.animationkotlin.WelcomeScreenFrag"
        android:label="fragment_welcome_screen"
        tools:layout="@layout/fragment_welcome_screen" >
        <action
            android:id="@+id/action_welcomeScreenFrag2_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.animationkotlin.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <action
            android:id="@+id/action_quizFragment_to_goalFragment"
            app:destination="@id/goalFragment"
            app:popUpTo="@id/quizFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_quizFragment_to_missFragment"
            app:destination="@id/missFragment"
            app:popUpTo="@id/quizFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/goalFragment"
        android:name="com.example.animationkotlin.GoalFragment"
        android:label="fragment_goal"
        tools:layout="@layout/fragment_goal" >
        <action
            android:id="@+id/action_goalFragment_to_quizFragment"
            app:destination="@id/quizFragment"
            app:popUpTo="@id/welcomeScreenFrag2" />
    </fragment>
    <fragment
        android:id="@+id/missFragment"
        android:name="com.example.animationkotlin.MissFragment"
        android:label="fragment_miss"
        tools:layout="@layout/fragment_miss" >
        <action
            android:id="@+id/action_missFragment_to_quizFragment"
            app:destination="@id/quizFragment"
            app:popUpTo="@id/quizFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.example.animationkotlin.RulesFragment"
        android:label="fragment_rules"
        tools:layout="@layout/fragment_rules" />
    <fragment
        android:id="@+id/ballFragment"
        android:name="com.example.animationkotlin.BallFragment"
        android:label="fragment_ball"
        tools:layout="@layout/fragment_ball" />
</navigation>